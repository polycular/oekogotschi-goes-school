<UserControl x:Class="EcoGotchi.UI.DecisionButton"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:sys="clr-namespace:System;assembly=mscorlib"
						 x:Name="DecisionButton">

	<UserControl.Resources>
		<ResourceDictionary Source="./../GlobalRes.xaml" />
	</UserControl.Resources>
	
	<!-- Answer Button -->
	<Grid Height="135"
				Width="850">

		<Rectangle x:Name="Re_Bg"
							 Fill="{StaticResource Scb_Blue4}"
							 RadiusX="30"
							 RadiusY="30"
							 />

		<TextBlock x:Name="Tb_Decision"
							 Style="{StaticResource OpenSansBold}"
							 Margin="60,0,0,0"
							 Text="{Binding Txt, ElementName=DecisionButton}"
							 Foreground="White"
							 VerticalAlignment="Center"
							 FontSize="35"
							 />

		<Button x:Name="Btn_Decision"
						Style="{StaticResource Btn_Invis}"
						/>

	</Grid>

</UserControl>