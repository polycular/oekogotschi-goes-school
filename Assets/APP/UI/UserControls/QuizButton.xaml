<UserControl x:Class="EcoGotchi.UI.QuizButton"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:sys="clr-namespace:System;assembly=mscorlib"
						 x:Name="QuizButton">

	<UserControl.Resources>
		<ResourceDictionary Source="./../GlobalRes.xaml" />
	</UserControl.Resources>


	<StackPanel Orientation="Horizontal" Width="900">
		
		<Ellipse x:Name="El_Sel" Height="20"
						 Width="20"
						 Margin="0,0,30,0"
						 Fill="{StaticResource Scb_Blue3}"
						 HorizontalAlignment="Left"/>

		<Grid Height="120"
				Width="850">

		<Rectangle  x:Name="Re_Bg"
								RadiusX="30"
							  RadiusY="30"
							  Fill="{StaticResource Scb_Blue4}"
								/>

		<TextBlock x:Name="Tb_Txt"
							 Style="{StaticResource OpenSansBold}"
							 Margin="60,0,0,0"
							 VerticalAlignment="Center"
							 Foreground="White"
							 FontSize="35"
							 Text="A oder B"
							 />

		<Button x:Name="Btn_Sel"
						Style="{StaticResource Btn_Invis}"
						/>

	</Grid>
	</StackPanel>

</UserControl>